# AI for the Win - Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# Required: LLM API Keys
# =============================================================================

# Anthropic Claude API Key (required for most labs)
# Get your key at: https://console.anthropic.com/
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# =============================================================================
# Optional: Threat Intelligence APIs
# =============================================================================

# VirusTotal API Key (free tier: 4 requests/min, 500/day)
# Get your key at: https://www.virustotal.com/gui/my-apikey
VIRUSTOTAL_API_KEY=

# Shodan API Key (free tier available)
# Get your key at: https://account.shodan.io/
SHODAN_API_KEY=

# AbuseIPDB API Key (free tier: 1,000 checks/day)
# Get your key at: https://www.abuseipdb.com/account/api
ABUSEIPDB_API_KEY=

# =============================================================================
# Optional: MISP Integration
# =============================================================================

# MISP Instance URL (if using MISP for threat intel)
MISP_URL=

# MISP API Key
MISP_API_KEY=

# =============================================================================
# Optional: OpenAI (for comparison/alternative)
# =============================================================================

# OpenAI API Key (optional, for GPT-based labs)
# Get your key at: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# =============================================================================
# Development Settings
# =============================================================================

# Debug mode (true/false)
DEBUG=false

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Enable experimental features
EXPERIMENTAL_FEATURES=false

# =============================================================================
# Lab-Specific Settings
# =============================================================================

# Lab 05: Threat Intel Agent - Default threat feeds
THREAT_FEEDS_ENABLED=true

# Lab 06: RAG - Vector database path
VECTOR_DB_PATH=./data/vector_store

# Lab 09: Detection Pipeline - Alert threshold
DETECTION_THRESHOLD=0.75

# Lab 11: Ransomware Detection - Auto-contain mode
AUTO_CONTAIN_ENABLED=false

# Lab 12: Purple Team - Safe simulation mode (always keep true!)
SAFE_SIMULATION_MODE=true

# =============================================================================
# Testing Settings
# =============================================================================

# Skip tests requiring API keys
SKIP_API_TESTS=true

# Test data directory
TEST_DATA_DIR=./tests/data

# =============================================================================
# Notes
# =============================================================================
#
# 1. Never commit your .env file to version control
# 2. The .gitignore already excludes .env files
# 3. Some labs can run without API keys using mock data
# 4. For production, use a secrets manager instead
#
